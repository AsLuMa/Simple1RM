<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:gravity="center" android:id="@+id/linearLayout">

    <!-- add some padding to the content-wrap-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rep_weight"
            android:text="40"
            android:textSize="90sp"
            android:hint="00"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="135dp" android:layout_marginRight="135dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rep_percent"
            android:text="70"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="@+id/rep_weight" android:layout_marginTop="2dp"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@+id/rep_weight"/>
    <!--android:layout_weight="1" What does this do?-->

</androidx.constraintlayout.widget.ConstraintLayout>